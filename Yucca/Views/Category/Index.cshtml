@{
    ViewBag.Title = "Index";
}
<div class="container body-content">
    <div class="container">
        <br />
        <br/>
        <div><b>@ViewBag.Categories.Name</b></div>
        <div class="row">
            <div class="col-md-12">
                <div class="carousel slide" id="carousel-290963">
                    <ol class="carousel-indicators">
                        <li class="active" data-slide-to="0" data-target="#carousel-290963">
                        </li>
                        <li data-slide-to="1" data-target="#carousel-290963">
                        </li>
                        <li data-slide-to="2" data-target="#carousel-290963">
                        </li>
                        <li data-slide-to="3" data-target="#carousel-290963">
                        </li>
                        <li data-slide-to="4" data-target="#carousel-290963">
                        </li>
                        <li data-slide-to="5" data-target="#carousel-290963">
                        </li>
                    </ol>
                    <div class="carousel-inner">
                        <div class="item active">
                            <img alt="Carousel Bootstrap First" src="~/Content/new/apartment-exterior-balcony-garden-design-with-potted-flower-and-plant-also-black-iron-railing-also-brown-tile-flooring-also-modern-balcony-garden.jpg" />
                        </div>
                        <div class="item">
                            <img alt="Carousel Bootstrap Second" src="~/Content/new/apartment-flower-12.jpg" />
                        </div>
                        <div class="item">
                            <img alt="Carousel Bootstrap Third" src="~/Content/new/Contemporary-Small-Balcony-Garden-Design-with-vase-plants-and-flowers.jpg" />
                        </div>
                        <div class="item">
                            <img alt="Carousel Bootstrap Forth" src="~/Content/new/gallery-1452185788-group-of-potted-cactus-1024x673.jpg" />
                        </div>
                        <div class="item">
                            <img alt="Carousel Bootstrap Forth" src="~/Content/new/mai_vang_bonsai_2__HHJR.jpg" />
                        </div>
                        <div class="item">
                            <img alt="Carousel Bootstrap Forth" src="~/Content/new/The-Most-Beautiful-And-Unique-Bonsai-Trees-In-The-World-homesthetics-27.jpg" />
                        </div>
                    </div>
                    <a class="left carousel-control" href="#carousel-290963" data-slide="prev"><span class="glyphicon glyphicon-chevron-left"></span></a>
                    <a class="right carousel-control" href="#carousel-290963" data-slide="next"><span class="glyphicon glyphicon-chevron-right"></span></a>
                </div>
            </div>
        </div>

        <br />
        <br />
        <br />
        <div class="row">
            <div class="panel-group" id="accordion0">
                <div class="panel panel-success">
                    <div class="panel-heading" id="Paneldefault1">
                        <a href="#myacc0" class="accordion-toggle" data-toggle="collapse" data-parent="#accordion0">@ViewBag.Categories.Name</a>
                    </div>
                    <div class="panel-collapse collapse in" id="myacc0">
                        <div class="panel-body">
                            @foreach (var prod in ViewBag.Categories.Products)
                            {
                                <div class="col-md-3">
                                    <div class="thumbnail">
                                        @foreach (var pic in ViewBag.Pictures)
                                        {
                                            if (pic.ProductId == prod.Id)
                                            {
                                                <img src="@pic.ImagePath?w=220&h=180&mode=crop" class="lazyload" alt="@pic.ImageAltText"/>
                                            }
                                        }
                                        <div class="caption">
                                            <p>نام : @prod.Name</p>
                                            <p>قیمت : @prod.Price تومان</p>

                                            <div class="btn-group btn-group-xs btn-block" role="group" aria-label="...">
                                                <button type="button" class="btn btn-success">@Html.ActionLink("افزودن به سبد خرید", "ShowShoppingCart", "ShoppingCart", new {productId = prod.Id}, null)</button>
                                                <button type="button" class="btn btn-success">@Html.ActionLink("اطلاعات بیشتر", "Index", "Product", new {productId = prod.Id}, null) </button>
                                            </div>

                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <hr />
</div>


<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>

    @Styles.Render("~/Content/Site.css")
    @Styles.Render("~/Content/bootstrap.css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <header>
        <div class="navbar navbar-default navbar-left navbar-fixed-top" id="AdminNav">

            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <div id="AdminBrand">
                   <h4>
                       @Html.ActionLink("صفحه اصلی پنل", "Index", "Home", new { area = "Admin" },new { @class = "BrandStyle" } )
                   </h4>    
                </div>
            </div>

            <div class="navbar-collapse collapse" id="NavbarLeft">
                <ul class="nav navbar-nav">
                    <li><a href="~/"><span class="glyphicon glyphicon-home"></span> صفحه وب سایت </a></li>
                    <li><a href="#"><span class="glyphicon glyphicon-off"></span> خروج </a></li>
                </ul>
            </div>

        </div>
    </header>

    <section id="AdminSection">
        <div class="row">
            <div class="col-md-12">
                <div class="container body-content">
                    @RenderBody()
                </div>
            </div>
        </div>
    </section>
    <aside id="AdminAside">
        <div class="container">
            <br />
            <br />
            <div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
                <div class="panel panel-default x">
                    <div class="panel-heading" role="tab" id="headingOne">
                        <h4 class="panel-title">
                            <a role="button" data-toggle="collapse" data-parent="#accordion" href="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                                گروه کالا
                            </a>
                        </h4>
                    </div>
                    <div id="collapseOne" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="headingOne">
                        <div class="panel-body">
                            <ul>
                                <li>@Html.ActionLink("مدیریت گروه کالا", "Index", "Category", new { @class = "LinksClass" })</li>
                                <li>@Html.ActionLink("اسلایدشو گروه کالا", "Index", "CategorySlide", new { @class = "LinksClass" })</li>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="panel panel-default x">
                    <div class="panel-heading" role="tab" id="headingTwo">
                        <h4 class="panel-title">
                            <a class="collapsed" role="button" data-toggle="collapse" data-parent="#accordion" href="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                                کالا
                            </a>
                        </h4>
                    </div>
                    <div id="collapseTwo" class="panel-collapse collapse" role="tabpanel" aria-labelledby="headingTwo">
                        <div class="panel-body">
                            <ul>
                                <li>@Html.ActionLink("مدیریت کالا", "Index", "Product", new { @class = "LinksClass" })</li>
                                <li>@Html.ActionLink("تصاویر کالا", "Creat", "ProductPicture", new { @class = "LinksClass" })</li>
                                <li>@Html.ActionLink("ویژگی کالا", "Index", "Attribute", new { @class = "LinksClass" })</li>
                            </ul>
                        </div>
                    </div>
                </div>

                <div class="panel panel-default x">
                    <div class="panel-heading" role="tab" id="headingThree">
                        <h4 class="panel-title">
                            @Html.ActionLink("تنظیمات", "Edit","Setting")
                            <a >
                                
                            </a>
                        </h4>
                    </div>
                </div>

                <div class="panel panel-default x">
                    <div class="panel-heading" role="tab" id="headingThree">
                        <h4 class="panel-title">
                            <a class="collapsed" role="button" data-toggle="collapse" data-parent="#accordion" href="#collapseThree" aria-expanded="false" aria-controls="collapseThree">
                                مدیریت کاربران
                            </a>
                        </h4>
                    </div>
                    <div id="collapseThree" class="panel-collapse collapse" role="tabpanel" aria-labelledby="headingThree">
                        <div class="panel-body">
                            <ul>
                                <li>@Html.ActionLink("درج کاربر", "Create", "User", new { @class = "LinksClass" })</li>
                                <li>@Html.ActionLink("اطلاعات کاربر", "Details", "User", new { @class = "LinksClass" })</li>
                                <li>@Html.ActionLink("ویرایش اطلاعات کاربر", "Edit", "User", new { @class = "LinksClass" })</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </aside>


    

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>